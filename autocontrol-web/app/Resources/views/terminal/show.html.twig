{% extends 'base.html.twig' %}

{% block body %}
    <h1>Terminal</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ terminal.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ terminal.numero }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ terminal.estado }}</td>
            </tr>
            <tr>
                <th>Coordenada</th>
                <td>{{ terminal.coordenada }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('terminal_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('terminal_edit', { 'id': terminal.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
